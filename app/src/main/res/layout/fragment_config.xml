<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <CheckBox
                android:id="@+id/fragment_config_random_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text=" Activer la publisitée des produits aléatoir."
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>
            <CheckBox
                android:id="@+id/fragment_config_random_category_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text=" Activer la publisitée des produits aléatoir de chaque categorie."
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>
            <CheckBox
                android:id="@+id/fragment_config_recent_product_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text=" Activer la publisitée des produits récente"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>