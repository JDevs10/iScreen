<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/custom_random_catalog_mainLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp">
        <!--android:background="@color/colorPrimaryDark"-->
        <ImageView
            android:id="@+id/custom_random_catalog_item_productimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <TextView
            android:id="@+id/custom_random_catalog_item_productname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Product Name mmmmmmmmmmmmmmmm"
            android:textColor="@android:color/black"
            android:textSize="150dp"
            android:textStyle="bold"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/custom_random_catalog_item_productprice"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="$19.9"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="150dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>